<% layout('/layouts/boilerplate.ejs') %>
<link rel="stylesheet" href="/css/show/style.css">
<body>
    <div class="row mt-3">
            <div class="col-8 offset-5">
                <h3 class="head">listing details:</h3>
            </div>
    
            <div class="card col-6 offset-3">
                <img src="<%=list.image.url %>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <h5 class="card-title text"><b><%=list.title %></b></h5>
                    <p class="card-text text"><%=list.description %>
                        <br>
                      Price : &#8377 <%=list.price.toLocaleString("en-IN") %>
                        <br>
                      <b >location</b> : <%=list.location %>
                        <br>
                       <b>country</b> : <%=list.country %>
                    </p>
                </div> 

                <div class="row mb-5">
                    <div class="col-1 btns">
                        <a class="btn btn-dark btn-masher" href="/listings/<%=list._id%>/edit" class="btn btn-primary">Edit</a>
                    </div>
                    <div class="col btns">
                        <form action="/listings/<%=list._id%>?_method=Delete" method="post">
                            <button class="btn btn-dark btn-masher ">Delete</button>
                         </form>
                    </div>
                </div>
            
            </div>    
    </div>
   
</body>