<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show offset-3 col-6" role="alert">
        <%=success%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<%}%>
<% if(failure && failure.length || error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show offset-3 col-6" role="alert">
        <%=failure%><%=error%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<%}%>